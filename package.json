{
  "name": "chrome-tabs-history",
  "version": "1.0.0",
  "description": "Chrome extension that keeps an history of opened tabs and let the user move through it",
  "main": "background.js",
  "scripts": {
    "test": "npm run compile-src && node test/*-test.js | ./node_modules/.bin/tap-spec",
    "compile-src": "browserify app/scripts/background-dev.js -o app/scripts/background.js",
    "compile-css": "./node_modules/.bin/node-sass app/styles/style.scss app/styles/style.css",
    "build": "npm run test && npm run compile-css"
  },
  "keywords": [
    "chrome",
    "browser",
    "tabs",
    "history"
  ],
  "author": "Edoardo Bianchi (bongofury)",
  "license": "MIT",
  "devDependencies": {
    "browserify": "^8.1.0",
    "node-sass": "^2.0.0-beta",
    "tap-spec": "^2.1.2",
    "tape": "^3.0.3"
  }
}
